<div class="modal-body">
  <dl class="dl-horizontal">
    <dt>Name:</dt>
    <dd>
    <%= @gene.name %>&nbsp;
    </dd>
    <dt>Short Name:</dt>
    <dd>
    <%= @gene.short_name %>&nbsp;
    </dd>
    <dt>Access ID:</dt>
    <dd>
    <%= @gene.access_id %>&nbsp;
    </dd>
    <dt>Location:</dt>
    <dd>
    <%= @gene.location %>&nbsp;
    </dd>
    <dt>Alleles:</dt>
    <dd>
    <% @gene.alleles.each do |al| %>
      <%= al.name %>&nbsp;  
    <% end %>&nbsp;
    </dd>
  </dl>
</div>
