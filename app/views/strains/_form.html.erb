<div class="modal-body">
  <%= form_for(@strain, :remote => true, :method => :post, :html => {:class => 'form-validate form-horizontal form-column form-striped'}) do |f| %>

<div class="control-group">
  <label class="control-label" for="textfield">编号</label>
  <div class="controls">
    <%= f.text_field :name%>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="textfield">描述</label>
  <div class="controls">
    <%= f.text_area :description%>
  </div>
</div>
<% end %>
</div>
