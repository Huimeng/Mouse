<div class="login">
<div class="wrapper">
<div class="login-body">
  <h2>忘记密码</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => { :method => :post, "novalidate" =>"novalidate", :class => "form-validate"}) do |f| %>
    <div class="control-group">
      <div class="email controls">
        <%= f.email_field :email, autofocus: true ,  :class => "input-block-level", "data-rule-required" => "true", :placeholder => "请输入注册邮箱" %>
      </div>
    </div>
    <div class="submit">
      <input type="submit" class="btn btn-orange" value="发送重置密码请求">
    </div>
    <% end %>
  <div class="forget">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
</div>
