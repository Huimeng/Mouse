<div class="row-fluid">
  <div class="span12">
    <div class="box box-bordered box-color">
      <div class="box-title">
        <h3><i class="icon-list"></i>编辑User</h3>
      </div>
      <script type="text/javascript" language="javascript" charset="utf-8">
        $(document).ready(function(){
            $(".nav li").removeClass("current");
            $(".nav li.user_set").addClass("current");
            });
      </script>
      <div class="box-content nopadding">
        <%= form_for(@user, :url => "/user/#{@user.id}", :remote => true, :method => :put, :html => {:class => 'form-validate form-horizontal form-column form-bordered'}) do |f| %>
          <div class="control-group">
            <label class="control-label" for="textfield">姓名</label>
            <div class="controls">
              <%= f.text_field :full_name %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="textfield">系统登录名</label>
            <div class="controls">
              <%= f.text_field :username, autofocus: true, :disabled => true %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="textfield">Email</label>
            <div class="controls">
              <%= f.email_field :email, autofocus: true, :disabled => true %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="textfield">密码</label>
            <div class="controls">
              <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
              <%= f.password_field :password, autocomplete: "off", "data-rule-required" => "true", :class => "valid" %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="textfield">确认密码</label>
            <div class="controls">
              <%= f.password_field :password_confirmation, autocomplete: "off", "data-rule-required" => "true", "data-rule-equalto" => "#user_password" %>
            </div>
          </div>
          <div class="span12">
            <div class="form-actions">
              <div class="actions">
                <%= f.submit "保存", :class => 'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar do %>
  <%= render :partial => "sidebar" %>
<% end %>
