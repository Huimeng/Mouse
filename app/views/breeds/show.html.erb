<div class="row-fluid">
  <div class="span12">
    <div class="box box-color box-bordered">
      <div class="box-title">
        <h3>
          <i class="icon-reorder"></i>
          <%= @breed.father.code %>[<%= @breed.father.strain.name %>]+<%= @breed.mother.code %>[<%= @breed.mother.strain.name %>] 
        </h3>
        <div style="float:right; padding-right:2px;">
          <%= link_to "返回", breeds_path ,:class => 'btn btn' %>
        </div>
      </div>
      <div class="box-content nopadding">
        <ul class="timeline">
          <li>
          <% info_breed = @breed.breeds_infos.where(batch_id: nil).first %>
          <div class="timeline-content">
            <div class="left">
              <div class="icon green">
                <i class="icon-comment"></i>
              </div>
              <div class="date"><%= info_breed.operation_at %></div>
            </div>
            <div class="activity">
              <div class="user"><%= info_breed.user.username %>&nbsp;<span>操作</span></div>
              <p>
              <%= info_breed.remark %>
              </p>
            </div>
          </div>
          <div class="line"></div>
          </li>
          <% @breed.batches.each do |batch| %>
            <div class="line"></div>
            <h4>批次<%= batch.id %></h4> 
            <div class="line-li"></div>
            <% batch.breeds_infos.each do| info| %>
          <li>
          <div class="timeline-content">
            <div class="left">
              <div class="icon green">
                <i class="icon-comment"></i>
              </div>
              <div class="date"><%= info.operation_at %></div>
            </div>
            <div class="activity">
              <div class="user"><%= info.user.username %>&nbsp;<span>操作</span></div>
              <p>
              <%= info.remark %>
              </p>
            </div>
          </div>
          <div class="line"></div>
          </li>
          <%end%>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar do %>
  <%= render :partial => "sidebar" %>
<% end %>
