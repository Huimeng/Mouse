<div class="modal-body">
  <script type="text/javascript" language="javascript" charset="utf-8">
//<![CDATA[

  $(document).ready(function(){
      $(".select").select2();
      $("#childbirthday" ).datepicker({format: "yyyy-mm-dd"});
      });
//]]>
  </script>
  <%= form_for @basket,:url => create_littler_mice_basket_path(id: @basket.id),:method => :post,:remote => true, :html =>{:class => 'form-validate form-horizontal form-column form-bordered'} do |f| %>
    <div class="control-group">
      <label for="textfield" class="control-label">父亲</label>
      <div class="controls">
        <%= @m_m.code %>[<%= @m_m.strain.common_name%>]
      </div>
    </div>
    <div class="control-group">
      <label for="textfield" class="control-label">母亲</label>
      <div class="controls">
        <%= @f_m.code %>[<%= @f_m.strain.common_name%>]
      </div>
    </div>
    <div class="control-group">
      <label for="textfield" class="control-label">合笼时间</label>
      <div class="controls">
        <%= @breed.cage_at%>
      </div>
    </div>
    <div class="span12">
      <div class="control-group">
        <label for="textfield" class="control-label">品系</label>
        <div class="controls">
          <%= select_tag :strain_id, options_from_collection_for_select(Strain.all, :id, :common_name),{:class=> 'select input-large'}%>
        </div>
      </div>
      <div class="control-group">
        <label for="textfield" class="control-label">生产数量</label>
        <div class="controls">
          <%= text_field_tag :quantity %>
          <%= hidden_field_tag :breed_id,  @breed.id %>
        </div>
      </div>
      <div class="control-group">
        <label for="textfield" class="control-label">繁殖日期</label>
        <div class="controls">
          <%= text_field_tag :childbirthday %>
        </div>
      </div>
    </div>
  <% end %>
</div>
