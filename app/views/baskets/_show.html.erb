    <a title="View larger image" class="ui-icon ui-icon-zoomin">View larger</a>
    <a title="View larger image" class="ui-icon ui-icon-plusthick">View larger</a>
    <a title="Delete this image" class="ui-icon ui-icon-arrowreturnthick-1-n">Delete image</a>
    </li>
  <%end%>
</ul>
 
<div id="trash" class="ui-widget-content ui-state-default">
  <h4 class="ui-widget-header"><span class="ui-icon ui-icon-trash">Trash</span> 临时存放</h4>
  <ul class="gallery ui-helper-reset">
  <% @mice.each do |m|%>
  <li class="ui-widget-content ui-corner-tr ui-draggable" style="display: list-item; width: 48px;" id="mouse_<%= m.id %>">
  <% if m.code == nil or m.code == ""  %>
    <h5 class="ui-widget-header">Litter</h5>
    <img width="96" height="72" alt="Planning the ascent" src="/assets/litter.png" style="display: inline-block; height: 36px;">
  <%else %>
    <% if m.sex == "M" %>
      <h5 class="ui-widget-header"><%= m.code %></h5>
    <img width="96" height="72" alt="Planning the ascent" src="/assets/mouse_m.png" style="display: inline-block; height: 36px;">
    <%else%>
      <h5 class="ui-widget-header"><%= m.code %></h5>
    <img width="96" height="72" alt="Planning the ascent" src="/assets/mouse_f.png" style="display: inline-block; height: 36px;">
    <%end%>
  <%end%>
    <a class="ui-icon ui-icon-zoomin" title="View larger image">View larger</a>
    <a class="ui-icon ui-icon-zoomin" title="View larger image">View larger</a>
    <a class="ui-icon ui-icon-zoomin" title="View larger image">View larger</a>
    <a class="ui-icon ui-icon-arrowreturnthick-1-s" title="Recycle this image">Recycle image</a>
  <% end %>
  </ul>
</div>
 
</div>
