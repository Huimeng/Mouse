      <% if m.sex == "M" %>
        <img src="/assets/mouse_m.png" alt="Planning the ascent" width="96" height="72" />
      <%else %>
          <img src="/assets/mouse_f.png" alt="Planning the ascent" width="96" height="72" />
      <%end%>
    <%end%>
