<!DOCTYPE html>
<html>
<head>
  <title>Mouses</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!-- Apple devices fullscreen -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <!-- Apple devices fullscreen -->
    <meta names="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body style="font:12px 'Microsoft YaHei', 微软雅黑, Arial, Lucida Grande, Tahoma, sans-serif; text-shadow: 0px 0px 0px #D1D1D1;" class="theme-blue" data-theme='theme-blue'>
    <div id="navigation">
      <div class="container-fluid">
        <a href="<%= root_url %>" class="toggle-nav" rel="tooltip" data-placement="bottom" title="Toggle navigation">
     &nbsp;&nbsp;&nbsp;小鼠数据管理系统&nbsp;&nbsp;&nbsp;&nbsp;
        <i class="icon-reorder"></i></a>
        <ul class='main-nav'>
          <%= render 'layouts/navigation' %>
        </ul>
        <div class="user">
          <%= render 'layouts/user_nav' %>
        </div>
      </div>
    </div>
    <!-- 导航 结束 -->    
    <!-- 容器 开始 -->
    <div id="content" class="container-fluid nav-hidden">
      <!-- 左侧导航 开始 -->
        <div class="container-fluid">
          <div class="page-header">
            <div class="pull-left">
              <h1>笼子</h1>
            </div>
            <div class="pull-right">
              <ul class="minitiles">
                <li class="grey">
                <a href="<%= destroy_user_session_path %>" data-remote="true" data-method="delete">&nbsp;&nbsp;&nbsp;<i class="icon-lock"></i>&nbsp;&nbsp;锁屏离开</a>
                </li>
              </ul>
              <ul class="stats">
                <li class='<%= 'blue' %>'>
                <i class="icon-calendar"></i>
                <div class="details">
                  <span class="big"></span>
                  <span></span>
                </div>
                </li>
              </ul>
            </div>
          </div>

          <!-- 表格 开始 -->
          <div class="row-fluid">
            <div class="span12">
              <div class="box box-color box-bordered">
                <% flash.each do |name, msg| %>
                  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                    <a class="close" data-dismiss="alert">&#215;</a>
                    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                  </div>
                <% end %>
                <%= yield %>
              </div>
            </div>
          </div>
          <!-- 表格 结束 -->
        </div>
      <!-- 右侧内容 结束 -->
    </div>
    <!-- 容器 结束 -->
    <div id="lock_screen" class="modal hide fade" tabindex="-1" role="dialog" data-keyboard=false data-backdrop=false aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <h3 id="myModalLabel">屏幕锁定</h3>
      </div>
      <div class="modal-body2">
      </div>
      <div class="modal-footer">
        <a class="unlock_btn btn btn-primary" disabled=true>解锁</a>
      </div>
    </div>
  </body>
</html>
